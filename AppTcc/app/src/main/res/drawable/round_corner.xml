<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="false">
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="oval">
            <stroke android:width="1dp" android:color="#e95220" />
                <solid android:color="#ff6225" />
            </shape>
       </item>
        <item android:state_pressed="true">
            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="ring" android:innerRadius="30dp" android:thickness="5dp" android:useLevel="false">
                <stroke android:width="1dp" android:color="#f45721" />
                <solid android:color="#e95220" />
            </shape>
        </item>
