<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tcc.apptcc.activities.CadastroActivity"
    android:background="#0097a7"
    xmlns:cardview="http://schemas.android.com/apk"
    style="@style/AppTheme"
    android:touchscreenBlocksFocus="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_login_cadastro"
        android:layout_alignWithParentIfMissing="false"
        android:hint="@string/str_login"
        android:textColorHint="#FFFFFF"
        style="@style/AppTheme"
        android:editable="true"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="#fafafa"
        android:backgroundTint="#b6b6b6"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_senha_repetida"
        android:layout_alignWithParentIfMissing="false"
        android:hint="Repita sua senha"
        android:textColorHint="#FFFFFF"
        style="@style/AppTheme"
        android:editable="true"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="#fafafa"
        android:inputType="textPassword"
        android:backgroundTint="#b6b6b6"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/et_senha_cadastro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_login_cadastro"
        android:layout_alignEnd="@+id/et_login_cadastro" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/str_senha"
        android:textColorHint="#FFFFFF"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_senha_cadastro"
        android:textColor="#fafafa"
        android:backgroundTint="#b6b6b6"
        style="@style/AppTheme"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/et_senha_repetida"
        android:layout_alignEnd="@+id/et_senha_repetida"
        android:layout_below="@+id/et_login_cadastro" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ib_cadastrar"
        android:background="@drawable/round_corner"
        style="@style/AppTheme"
        android:src="@drawable/ic_chevron"

        android:backgroundTint="#ff5722"
        android:tintMode="multiply"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/et_senha_repetida"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/iv_logo_cadastro"
        android:src="@drawable/marca_invertida_icone"
        style="@style/AppTheme"
        android:layout_above="@+id/et_login_cadastro"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <!--    <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_login"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            cardview:cardCornerRadius="1dp"
            android:elevation="50dp"
            android:contextClickable="false"
            android:layout_alignParentBottom="true">
    </android.support.v7.widget.CardView> -->


</RelativeLayout>
