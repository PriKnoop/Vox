

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.tcc.apptcc.activities.MainActivity"
        android:background="#0097a7"
        xmlns:cardview="http://schemas.android.com/apk"
        style="@style/AppTheme"
        android:touchscreenBlocksFocus="true"
        android:id="@+id/rl_main">






        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/iv_logo_cadastro"
            android:src="@drawable/marca_invertida_icone"
            style="@style/AppTheme"
            android:layout_below="@+id/tv_welcome"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/str_login"
            android:id="@+id/btLogin"
            style="@style/AppTheme"
            android:background="#fafafa"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/iv_logo_cadastro"
            android:layout_alignLeft="@+id/btCadastro"
            android:layout_alignStart="@+id/btCadastro" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/str_cadastre"
            android:id="@+id/btCadastro"
            style="@style/AppTheme"
            android:background="#fafafa"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/btLogin"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/str_welcome"
            android:id="@+id/tv_welcome"
            style="@style/AppTheme"
            android:textColor="#fafafa"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

